    <script type="text/javascript">
        $(function () {
            $('ul li:has(ul)').hover(
                function (e) {
                    $(this).find('div').css({ display: "block" });
                    $(this).find('ul').first().css({ display: "block" });
                },
                function (e) {
                    $(this).find('div').css({ display: "none" });
                    $(this).find('ul').first().css({ display: "none" });
                }
            );
        });
    </script>
